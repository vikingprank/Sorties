<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue sur Sorties.com!{% endblock %}</title>
        {% block stylesheets %}
             <link rel="stylesheet" href={{ asset('css/app.scss') }}>
             <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

        {% endblock %}
      
    </head>
    <body>
        <div class="container text-light">
        <header>
            <h1>
                <a href="{{ path('main_home') }}"><img src="{{ asset('img/Sorties.jpg') }}" alt="Sorties!"></h1>
            {% include "inc/nav.html.twig" %}

            {% for label, messages in app.flashes %} 
                {% for message in messages %} 
                    <div class="alert-{{label}}"> {{ message }} </div> 
                {% endfor %} 
            {% endfor %}

        </header>
            {% block body %}
            <div class="text-light">
            </div>
            {% endblock %}
            
        <footer><br><br><hr><div>&copy;{{ "now"|date("Y") }} Sorties.com</div></footer>
        </div>
    </body>
</html>
